<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/config_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nome da Configuração"
        android:textSize="18sp"
        android:textColorHint="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Wi-Fi"
        android:textSize="18sp"
        android:layout_below="@id/config_name"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <Switch
        android:id="@+id/wifi_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/config_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_media"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Media"
        android:textSize="18sp"
        android:layout_below="@id/tv_wifi"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/sb_media"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_media"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_ring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ring"
        android:textSize="18sp"
        android:layout_below="@id/sb_media"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/sb_ring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_ring"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_alarm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Alarm"
        android:textSize="18sp"
        android:layout_below="@id/sb_ring"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/sb_alarm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_alarm"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Salvar"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_config_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nome da Configuração"
        android:textSize="18sp"
        android:textColorHint="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/ed_tv_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Localização"
        android:textSize="18sp"
        android:layout_below="@id/ed_config_name"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/ed_btnEditMap"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@id/ed_config_name"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:text="Alterar"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ed_tv_wifi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Wi-Fi"
        android:textSize="18sp"
        android:layout_below="@id/ed_tv_location"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <Switch
        android:id="@+id/ed_wifi_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_btnEditMap"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ed_tv_media"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Media"
        android:textSize="18sp"
        android:layout_below="@id/ed_tv_wifi"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/ed_sb_media"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ed_tv_media"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ed_tv_ring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ring"
        android:textSize="18sp"
        android:layout_below="@id/ed_sb_media"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/ed_sb_ring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ed_tv_ring"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ed_tv_alarm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Alarm"
        android:textSize="18sp"
        android:layout_below="@id/ed_sb_ring"
        android:textColor="#000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/ed_sb_alarm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ed_tv_alarm"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/ed_btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="25dp"
        android:text="Salvar Alterações"
        android:textStyle="bold" />
</RelativeLayout>